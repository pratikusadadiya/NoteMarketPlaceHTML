<!DOCTYPE html>

<html>
<head>

    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- Favicon -->
    <link href="~/Content/images/Front/assets/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <!-- fontawesome -->
    @Styles.Render("~/bundles/css")

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/Front/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/Front/responsive.css">

</head>
<body>

    <div id="@ViewBag.MainClass">
        <!-- Header -->
        <header id="top-fixed-nav">
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container logged-out">
                    <div class="navbar-header">
                        <!-- Mobile menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a href="@Url.Action("home","User")" class = "navbar-brand">
                            <img class="logo img-responsive" src="~/Content/images/Front/assets/logo-img.png" alt="logo">
                        </a>
                    </div>

                    <!-- Main menu -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="@ViewBag.SearchNotes">
                                @Html.ActionLink("Search Notes", "SearchNotes")
                            </li>
                            <li class="@ViewBag.dashboard">
                                @Html.ActionLink("Sell Your Notes", "dashboard")
                            </li>
                            <li class="@ViewBag.faq">
                                @Html.ActionLink("FAQ", "faq")
                            </li>
                            <li class="@ViewBag.ContactUs">
                                @Html.ActionLink("Contact Us", "contactUs")
                            </li>
                            <li>
                                <a><button onclick="location.href='@Url.Action("login")'" type="submit" class="btn submit-btn">Login</button></a>
                            </li>
                        </ul>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li class="@ViewBag.SearchNotes">
                                    @Html.ActionLink("Search Notes", "SearchNotes")
                                </li>
                                <li class="@ViewBag.dashboard">
                                    @Html.ActionLink("Sell Your Notes", "dashboard")
                                </li>
                                <li class="@ViewBag.faq">
                                    @Html.ActionLink("FAQ", "faq")
                                </li>
                                <li class="@ViewBag.ContactUs">
                                    @Html.ActionLink("Contact Us", "contactUs")
                                </li>
                                <li>
                                    @Html.ActionLink("Login", "login")
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </nav>
        </header>
        <!-- Header ends -->

        <div class="content">
            @RenderBody()
        </div>


        <!-- Footer -->
        <footer id="footer-inner">
            <div class="container">
                <div class="row footer-content">
                    <div class="col-md-6 col-sm-6 col-xs-6 text-left">
                        <h5>Copyright &copy; TatvaSoft All Rights Reserved.</h5>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <ul class="social-list text-right">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- jQuaery libraries
        <script src="~/Scripts/Front/jquery.min.js"></script>
    Bootstrap JS
    <script src="~/Scripts/Front/Bootstrap/bootstrap.min.js"></script> -->
    @Scripts.Render("~/bundles/js")

    <!-- Custom JS
    <script src="~/Scripts/Front/main.js"></script> -->
    @Scripts.Render("~/Scripts/Front/main.js")

</body>
</html>
