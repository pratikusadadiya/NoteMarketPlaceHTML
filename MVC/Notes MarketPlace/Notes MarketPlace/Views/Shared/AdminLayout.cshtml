<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- Favicon -->
    <link href="~/Content/images/Front/assets/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <!-- fontawesome -->
    @Styles.Render("~/bundles/css")

    <!-- DataTable CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/Admin/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/Admin/responsive.css">

</head>

<body>

    <div id="@ViewBag.MainClass">
        <!-- Header -->
        <header id="top-fixed-nav">
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <!-- Mobile menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a class="navbar-brand">
                            <img class="logo img-responsive" src="~/Content/images/Front/assets/logo-img.png" alt="logo">
                        </a>
                    </div>

                    <!-- Main menu -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="@ViewBag.dashboard">
                                @Html.ActionLink("Dashboard", "dashboard")
                            </li>
                            <!-- Notes Dropdown -->
                            <li>

                                <div class="dropdown" id="profile-submenu">
                                    <button class="btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="@ViewBag.Notes">Notes</span>
                                    </button>
                                    <div class="dropdown-menu dropdown-link" aria-labelledby="dropdownMenuButton">
                                        @Html.ActionLink("Notes Under Review", "NotesUnderReview", null, new { @class = ViewBag.NotesUnderReview })
                                        @Html.ActionLink("Published Notes", "PublishedNotes", null, new { @class = ViewBag.PublishedNotes })
                                        @Html.ActionLink("Downloaded Notes", "DownloadedNotes", null, new { @class = ViewBag.DownloadedNotes })
                                        @Html.ActionLink("Rejected Notes", "RejectedNotes", null, new { @class = ViewBag.RejectedNotes })
                                    </div>
                                </div>

                            </li>
                            <!--- Notes Dropdown Ends -->
                            <li class="@ViewBag.members">
                                @Html.ActionLink("Members", "Members")
                            </li>
                            <li>

                                <div class="dropdown" id="profile-submenu">
                                    <button class="btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="@ViewBag.Reports">Reports</span>
                                    </button>
                                    <div class="dropdown-menu dropdown-link" aria-labelledby="dropdownMenuButton">
                                        @Html.ActionLink("Spam Reports", "SpamReports", null, new { @class = ViewBag.SpamReports })
                                    </div>
                                </div>

                            </li>

                            <!-- Settings Dropdown -->
                            <li>

                                <div class="dropdown" id="profile-submenu">
                                    <button class="btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="@ViewBag.Settings">Settings</span>
                                    </button>
                                    <div class="dropdown-menu dropdown-settings" aria-labelledby="dropdownMenuButton">
                                        @if (ViewBag.superadmin == true)
                                        {
                                            @Html.ActionLink("Manage System Configuration", "ManageSystemConfiguration", null, new { @class = ViewBag.ManageSystemConfiguration })
                                            @Html.ActionLink("Manage Administrator", "ManageAdministrator", null, new { @class = ViewBag.ManageAdministrator })
                                        }
                                        @Html.ActionLink("Manage Category", "ManageCategory", null, new { @class = ViewBag.ManageCategory })
                                        @Html.ActionLink("Manage Type", "ManageType", null, new { @class = ViewBag.ManageType })
                                        @Html.ActionLink("Manage Countries", "ManageCountry", null, new { @class = ViewBag.ManageCountry })
                                    </div>
                                </div>

                            </li>
                            <!--- Settings Dropdown Ends -->
                            <li>
                                <!-- Profile Dropdown -->
                                <div class="dropdown" id="profile-submenu">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img class="profile-img img-responsive img-circle" src="~/Content/images/Admin/User-Profile/profile-img.png" alt="logo">
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        @Html.ActionLink("Update Profile", "UpdateProfile", null, new { @class = ViewBag.UpdateProfile })
                                        @Html.ActionLink("Change Password", "changePassword")
                                        @Html.ActionLink("LOGOUT", "logout", null, new { @id = "submenu-logout" })
                                    </div>
                                </div>
                            </li>
                            <li>
                                <a><button onclick="Logout()" type="submit" class="btn submit-btn">Logout</button></a>
                            </li>
                        </ul>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li class="@ViewBag.dashboard">
                                    @Html.ActionLink("Dashboard", "dashboard")
                                </li>
                                <li class="@ViewBag.Notes">
                                    <!-- Notes Dropdown -->
                                    <div class="dropdown" id="mobile-dropdown">
                                        <button class="btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span>Notes</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-link" aria-labelledby="dropdownMenuButton">
                                            @Html.ActionLink("Notes Under Review", "NotesUnderReview", null, new { @class = ViewBag.NotesUnderReview })
                                            @Html.ActionLink("Published Notes", "PublishedNotes", null, new { @class = ViewBag.PublishedNotes })
                                            @Html.ActionLink("Downloaded Notes", "DownloadedNotes", null, new { @class = ViewBag.DownloadedNotes })
                                            @Html.ActionLink("Rejected Notes", "RejectedNotes", null, new { @class = ViewBag.RejectedNotes })
                                        </div>
                                    </div>
                                </li>
                                <li class="@ViewBag.members">
                                    @Html.ActionLink("Members", "Members")
                                </li>
                                <li class="@ViewBag.Reports">
                                    <!-- Reports Dropdown -->
                                    <div class="dropdown" id="mobile-dropdown">
                                        <button class="btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span>Reports</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-link" aria-labelledby="dropdownMenuButton">
                                            @Html.ActionLink("Spam Reports", "SpamReports", null, new { @class = ViewBag.SpamReports })
                                        </div>
                                    </div>
                                </li>
                                <li class="@ViewBag.Settings">
                                    <!-- Setting Dropdown -->
                                    <div class="dropdown" id="mobile-dropdown">
                                        <button class="btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span>Settings</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-settings" aria-labelledby="dropdownMenuButton">
                                            @if (ViewBag.superadmin == true)
                                            {
                                                @Html.ActionLink("Manage System Configuration", "ManageSystemConfiguration", null, new { @class = ViewBag.ManageSystemConfiguration })
                                                @Html.ActionLink("Manage Administrator", "ManageAdministrator", null, new { @class = ViewBag.ManageAdministrator })
                                            }
                                            @Html.ActionLink("Manage Category", "ManageCategory", null, new { @class = ViewBag.ManageCategory })
                                            @Html.ActionLink("Manage Type", "ManageType", null, new { @class = ViewBag.ManageType })
                                            @Html.ActionLink("Manage Countries", "ManageCountry", null, new { @class = ViewBag.ManageCountry })
                                        </div>
                                    </div>
                                </li>
                                <li class="@ViewBag.MyProfile">
                                    <!-- Profile Dropdown -->
                                    <div class="dropdown" id="mobile-dropdown">
                                        <button class="btn btn-secondary dropdown-toggle link-submenu" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span>My Profile</span>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            @Html.ActionLink("Update Profile", "UpdateProfile", null, new { @class = ViewBag.UpdateProfile })
                                            @Html.ActionLink("Change Password", "changePassword")
                                            @Html.ActionLink("LOGOUT", "logout", null, new { @id = "submenu-logout" })
                                        </div>
                                    </div>
                                </li>
                                <li>@Html.ActionLink("Logout", "logout")</li>
                            </ul>
                        </div>
                    </div>

                </div>
            </nav>
        </header>
        <!-- Header ends -->

        <div class="content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer id="footer-inner">
            <div class="container">
                <div class="row footer-content">
                    <div class="col-md-6 col-sm-6 col-xs-3 text-left">
                        <h5>Version : 1.1.24</h5>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-9">
                        <ul class="social-list text-right">
                            <h5>Copyright &copy; TatvaSoft All Rights Reserved.</h5>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- jQuaery libraries
        <script src="~/Scripts/Front/jquery.min.js"></script>
    Bootstrap JS
    <script src="~/Scripts/Front/Bootstrap/bootstrap.min.js"></script> -->
    @Scripts.Render("~/bundles/js")

    <!-- DataTable JS -->
    <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#published-notes-table, #member-table, #downloaded-notes-table, #rejected-notes-table, #under-review-table, #member-notes-table, #administrator-table, #manage-category-table, #manage-country-table, #manage-type-table, #spam-reports-table').DataTable({
                "info": false,
                "iDisplayLength": 5,
                'aoColumnDefs': [{
                    'bSortable': false,
                    'aTargets': ['nosort']
                }],
                language: {
                    "zeroRecords": "No record found",
                    paginate: {
                        next: "<img src='../../Content/images/Front/assets/right-arrow.png' alt=''>",
                        previous: "<img src='../../Content/images/Front/assets/left-arrow.png' alt=''>"
                    }
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    //debugger;
                    var index = iDisplayIndexFull + 1;
                    $("td:first", nRow).html(index);
                    return nRow;
                }
            });

            //$('$member-table').DataTable({
            //    "order": [[5, "desc"]]
            //});

            $("#published-pagination").append($("#published-notes-table_paginate"));
            $("#member-pagination").append($("#member-table_paginate"));
            $("#downloaded-pagination").append($("#downloaded-notes-table_paginate"));
            $("#rejected-notes-pagination").append($("#rejected-notes-table_paginate"));
            $("#under-review-pagination").append($("#under-review-table_paginate"));
            $("#spam-reports-pagination").append($("#spam-reports-table_paginate"));
            $("#member-notes-pagination").append($("#member-notes-table_paginate"));
            $("#administrator-pagination").append($("#administrator-table_paginate"));
            $("#manage-category-pagination").append($("#manage-category-table_paginate"));
            $("#manage-country-pagination").append($("#manage-country-table_paginate"));
            $("#manage-type-pagination").append($("#manage-type-table_paginate"));

            oTable1 = $('#published-notes-table').DataTable();
            $('#published-search').keyup(function () {
                oTable1.search($(this).val()).draw();
            });

            oTable2 = $('#member-table').DataTable();
            $('#member-search').keyup(function () {
                oTable2.search($(this).val()).draw();
            });

            oTable3 = $('#downloaded-notes-table').DataTable();
            $('#downloaded-search').keyup(function () {
                oTable3.search($(this).val()).draw();
            });

            oTable4 = $('#rejected-notes-table').DataTable();
            $('#rejected-search').keyup(function () {
                oTable4.search($(this).val()).draw();
            });

            oTable5 = $('#under-review-table').DataTable();
            $('#under-review-search').keyup(function () {
                oTable5.search($(this).val()).draw();
            });

            oTable6 = $('#administrator-table').DataTable();
            $('#administrator-search').keyup(function () {
                oTable6.search($(this).val()).draw();
            });

            oTable7 = $('#spam-reports-table').DataTable();
            $('#spam-reports-search').keyup(function () {
                oTable7.search($(this).val()).draw();
            });

            oTable8 = $('#manage-category-table').DataTable();
            $('#category-search').keyup(function () {
                oTable8.search($(this).val()).draw();
            });

            oTable9 = $('#manage-country-table').DataTable();
            $('#manage-country-search').keyup(function () {
                oTable9.search($(this).val()).draw();
            });

            oTable10 = $('#manage-type-table').DataTable();
            $('#manage-type-search').keyup(function () {
                oTable10.search($(this).val()).draw();
            });

        });

        function Logout() {
            if (confirm("Are you sure, you want to logout?") == true)
                window.location.href = "/Admin/logout";
            else
                event.preventDefault();
        }

    </script>

    <!-- Custom JS -->
    <script src="~/Scripts/Admin/main.js"></script>

</body>

</html>
