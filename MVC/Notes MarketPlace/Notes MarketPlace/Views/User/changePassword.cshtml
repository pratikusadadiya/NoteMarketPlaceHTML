@model Notes_MarketPlace.Models.changePassword
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/CenterForm.cshtml";
}
<!-- change password form -->
<div class="container text-center">
    <div class="row">
        <div class="form-inner">
            <h2 class="title">Change Password</h2>
            <h5 class="text-1">Enter your new password to change your password</h5>
            @using (Html.BeginForm("changePassword", "User", FormMethod.Post))
            {
                <div class="form-group text-left">
                    <label for="input-password">Old Password</label>
                    @Html.TextBoxFor(l => l.OldPassword, new { @type = "password", @placeholder = "Enter your old password", @id = "input-old-password", @class = "form-control" })
                    <span toggle="#input-old-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    @Html.ValidationMessageFor(l => l.OldPassword)
                    <h5 style="color:red;">@ViewBag.ErrorMsg</h5>
                </div>
                <div class="form-group text-left">
                    <label for="input-password">New Password</label>
                    @Html.TextBoxFor(l => l.NewPassword, new { @type = "password", @placeholder = "Enter your new password", @id = "input-new-password", @class = "form-control" })
                    <span toggle="#input-new-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    @Html.ValidationMessageFor(l => l.NewPassword)
                </div>
                <div class="form-group text-left">
                    <label for="input-confirm-password">Confirm Password</label>
                    @Html.TextBoxFor(l => l.ConfirmNewPassword, new { @type = "password", @placeholder = "Re-enter your password", @id = "input-confirm-password", @class = "form-control" })
                    <span toggle="#input-confirm-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    @Html.ValidationMessageFor(l => l.ConfirmNewPassword)
                </div>
                <button type="submit" class="btn submit-btn">Submit</button>
            }
        </div>
    </div>
</div>
