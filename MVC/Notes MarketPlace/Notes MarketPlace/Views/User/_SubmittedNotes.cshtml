<script>

    function DeleteNote(e) {
        var noteid = $(e).data('id');
        if (confirm("Are you sure, you want to delete this note? ") == true)
            window.location.href = "/User/DeleteNote?noteid=" + noteid;
        else
            event.preventDefault();
    }

</script>
