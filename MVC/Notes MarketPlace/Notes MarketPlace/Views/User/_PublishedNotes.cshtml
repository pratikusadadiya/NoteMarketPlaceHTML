@model IEnumerable<Notes_MarketPlace.SellerNote>
<div class="table-section">

    <div class="table-heading">
        <div class="col-md-6 col-sm-6 col-xs-6">
            <h3 class="heading">Published Notes</h3>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6 table-search text-right">
            <img class="search-icon" src="~/Content/images/Front/assets/search.jpg" alt="search">
            <input type="text" class="form-control" id="input-search" placeholder="Search">
            <button type="submit" class="btn submit-btn">search</button>
        </div>
    </div>

    <div class="table-responsive-lg" id="table-content">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Added date</th>
                    <th scope="col">title</th>
                    <th scope="col">category</th>
                    <th scope="col">sell type</th>
                    <th scope="col">price</th>
                    <th scope="col">action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var note in Model)
                {
                    if (note.SellerID == ViewBag.userid && note.Status == "Published")
                    {

                        <tr>
                            <td>@note.CreatedDate</td>
                            <td>@note.Title</td>
                            <td>@note.Categories.Where(l => l.Value.Equals(note.Category))</td>

                            @if (note.IsPaid == false)
                            {
                                <td>Free</td>
                            }
                            else
                            {
                                <td>Paid</td>
                            }

                            <td>@note.SellingPrice</td>
                            <td>
                                <img class="table-eye" src="~/Content/images/Front/assets/eye.png" alt="eye">
                            </td>
                        </tr>
                    }
                }


